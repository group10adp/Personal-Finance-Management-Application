<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nav_investments"
    tools:context=".InvestmentsFragment">

    <!-- Black strip at the top with "Investment Details" -->
    <!-- Change the value of layout_height to increase/decrease thickness -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#121212"
        android:gravity="center"
        android:text="Investment Details"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_gravity="top" />

    <!-- TODO: Update blank fragment layout -->
    <!-- Adjust layout_marginTop to avoid overlap with the top strip --> />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="OOps! Currently There Is No Investment"
        android:textSize="30sp"
        android:layout_marginTop="50dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#F9F2FB"
        android:contentDescription="Add investment"
        app:srcCompat="@android:drawable/ic_input_add" />

</FrameLayout>
